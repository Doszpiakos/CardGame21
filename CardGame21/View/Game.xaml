<Window x:Class="CardGame21.View.Game"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CardGame21.View"
        mc:Ignorable="d"
        d:DesignHeight="400"
        d:DesignWidth="600"
        MinWidth="600"
        MinHeight="400"
        Title="Game"
        Height="{Binding Height, Mode=TwoWay}"
        Width="{Binding Width, Mode=TwoWay}"
        Left="{Binding Left, Mode=TwoWay}"
        Top="{Binding Top, Mode=TwoWay}"
        Background="LemonChiffon"
        Closing="Window_Closing">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*" />
            <ColumnDefinition Width="1*" />
            <ColumnDefinition Width="1*" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="1.5*" />
            <RowDefinition Height="5*" />
            <RowDefinition Height="1*" />
        </Grid.RowDefinitions>
        <!-- Info bar -->
        <ListView   x:Name="infoView"
                    Background="LemonChiffon"
                    Grid.Row="0"
                    Grid.Column="2"
                    Grid.RowSpan="3"
                    ItemsSource="{Binding Info}"
                    ScrollViewer.VerticalScrollBarVisibility="Visible"
                    ScrollViewer.CanContentScroll="False">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <StackPanel Orientation="Vertical"
                                Grid.Column="0"
                                Background="LemonChiffon">
                        <Label Content="{Binding Message}"
                               Background="{Binding Color}"
                               Foreground="AliceBlue" />
                    </StackPanel>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
        <!-- /Info bar -->
        <!-- Dealer cards -->
        <ListView   x:Name="dealerView"
                    Background="LemonChiffon"
                    Grid.Row="0"
                    Grid.Column="0"
                    Grid.ColumnSpan="2"
                    ItemsSource="{Binding Dealers}"
                    ScrollViewer.VerticalScrollBarVisibility="Visible"
                    ScrollViewer.CanContentScroll="False">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>
                        <StackPanel Orientation="Vertical"
                                    Grid.Column="0"
                                    Background="CornflowerBlue">
                            <Label Content="{Binding Name}"
                                   Foreground="AliceBlue" />
                            <Label Content="{Binding Total}"
                                   Foreground="AliceBlue" />
                        </StackPanel>
                        <ListView Grid.Row="0"
                                  Grid.Column="1"
                                  Background="CornflowerBlue"
                                  Margin="0"
                                  ItemsSource="{Binding DealerHand, UpdateSourceTrigger=PropertyChanged}">
                            <ListView.ItemsPanel>
                                <ItemsPanelTemplate>
                                    <StackPanel Orientation="Horizontal" />
                                </ItemsPanelTemplate>
                            </ListView.ItemsPanel>
                            <ListView.ItemTemplate>
                                <DataTemplate>
                                    <StackPanel Orientation="Vertical"
                                                Background="{Binding SuitImage}"
                                                MinHeight="70"
                                                MinWidth="70">
                                        <Label />
                                        <Label />
                                        <Label Content="{Binding Value}"
                                               Foreground="AliceBlue"
                                               HorizontalAlignment="Center"
                                               VerticalAlignment="Center" />
                                        <Label Content="{Binding Name}"
                                               HorizontalAlignment="Center"
                                               VerticalAlignment="Bottom"
                                               Foreground="AliceBlue" />
                                    </StackPanel>
                                </DataTemplate>
                            </ListView.ItemTemplate>
                        </ListView>
                    </Grid>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
        <!-- /Dealer cards -->
        <!-- Players cards -->
        <ListView   x:Name="playersView"
                    Background="LemonChiffon"
                    Grid.Row="1"
                    Grid.Column="0"
                    Grid.ColumnSpan="2"
                    ItemsSource="{Binding Players}"
                    ScrollViewer.VerticalScrollBarVisibility="Visible"
                    ScrollViewer.CanContentScroll="False">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>
                        <StackPanel Orientation="Vertical"
                                    Grid.Column="0"
                                    Background="CornflowerBlue">
                            <Label Content="{Binding Name}"
                                   Background="{Binding Color}"
                                   Foreground="AliceBlue" />
                            <Label Content="{Binding Total}"
                                   Background="{Binding Color}"
                                   Foreground="AliceBlue" />
                        </StackPanel>
                        <ListView Grid.Row="1"
                                  Grid.Column="1"
                                  Margin="0"
                                  Background="CornflowerBlue"
                                  ItemsSource="{Binding Cards, UpdateSourceTrigger=PropertyChanged}">
                            <ListView.ItemsPanel>
                                <ItemsPanelTemplate>
                                    <StackPanel Orientation="Horizontal" />
                                </ItemsPanelTemplate>
                            </ListView.ItemsPanel>
                            <ListView.ItemTemplate>
                                <DataTemplate>
                                    <StackPanel Orientation="Vertical"
                                                Background="{Binding SuitImage}"
                                                MinHeight="70"
                                                MinWidth="70">
                                        <Label />
                                        <Label />
                                        <Label Content="{Binding Value}"
                                               HorizontalAlignment="Center"
                                               VerticalAlignment="Center"
                                               Foreground="AliceBlue" />
                                        <Label Content="{Binding Name}"
                                               HorizontalAlignment="Center"
                                               VerticalAlignment="Bottom"
                                               Foreground="AliceBlue" />
                                    </StackPanel>
                                </DataTemplate>
                            </ListView.ItemTemplate>
                        </ListView>
                    </Grid>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
        <!-- /Players cards -->
        <!-- Bottom row commands -->
        <Label Content="{Binding CurrentPlayer.Name}"
               ContentStringFormat="Current player: {0}"
               HorizontalAlignment="Center"
               VerticalAlignment="Center"
               Background="CornflowerBlue"
               Foreground="AliceBlue"
               Grid.Row="2"
               Grid.Column="0" />
        <Button Content="HIT"
                IsEnabled="{Binding HitEnabled, UpdateSourceTrigger=PropertyChanged}"
                Command="{Binding HitCommand}"
                Grid.Row="2"
                Grid.Column="1" />
        <Button Content="STAND"
                IsEnabled="{Binding StandEnabled, UpdateSourceTrigger=PropertyChanged}"
                Command="{Binding StandCommand}"
                Grid.Row="2"
                Grid.Column="2" />
        <!-- /Bottom row commands -->
    </Grid>
</Window>
