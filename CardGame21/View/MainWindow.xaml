<Window x:Class="CardGame21.View.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CardGame21"
        xmlns:vm="clr-namespace:CardGame21.ViewModel"
        mc:Ignorable="d"
        d:DesignHeight="400"
        d:DesignWidth="600"
        MinWidth="600"
        MinHeight="400"
        Title="MainWindow"
        Height="{Binding Height, Mode=TwoWay}"
        Width="{Binding Width, Mode=TwoWay}"
        Left="{Binding Left, Mode=TwoWay}"
        Top="{Binding Top, Mode=TwoWay}"
        Closing="Window_Closing">
    <Window.DataContext>
        <vm:MainWindowViewModel />
    </Window.DataContext>
    <Grid>
        <Grid.Background>
            <SolidColorBrush Color="Brown" />
        </Grid.Background>
        <StackPanel>
            <Label Content="Game 21"
                   FontSize="40"
                   HorizontalContentAlignment="Center" />
            <Button Content="New Game"
                    Margin="150,40,150,20"
                    Command="{Binding NewGameCommand}"
                    Foreground="Yellow"
                    FontSize="25" />
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="1*" />
                    <ColumnDefinition Width="3*" />
                    <ColumnDefinition Width="3*" />
                    <ColumnDefinition Width="1*" />
                </Grid.ColumnDefinitions>
                <TextBox Name="TextBox"
                         GotFocus="TextBox_GotFocus"
                         Grid.Column="1"
                         Text="{Binding PlayerInput, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}"
                         HorizontalAlignment="Center"
                         VerticalAlignment="Center"
                         Background="Gray"
                         FontSize="25"
                         Margin="5"
                         Padding="10"
                         Foreground="Yellow" />
                <Button Grid.Column="2"
                        Content="Add player"
                        Margin="5"
                        Command="{Binding AddPlayerCommand}"
                        Foreground="Yellow"
                        FontSize="25" />
            </Grid>
            <Button Content="Exit"
                    Margin="150,20,150,20"
                    Command="{Binding ExitCommand}"
                    Foreground="Yellow"
                    FontSize="25" />
            <ListView ItemsSource="{Binding PlayersList}"
                      Width="502"
                      ScrollViewer.VerticalScrollBarVisibility="Visible"
                      ScrollViewer.CanContentScroll="False"
                      Height="99">
                <ListView.View>
                    <GridView>
                        <GridViewColumn Header="Players"
                                        DisplayMemberBinding="{Binding Name}" />
                    </GridView>
                </ListView.View>
            </ListView>
        </StackPanel>
    </Grid>
</Window>
