<Window x:Class="CardGame21.View.NewGameWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CardGame21.View"
        mc:Ignorable="d"
        d:DesignHeight="400"
        d:DesignWidth="600"
        MinWidth="600"
        MinHeight="400"
        Title="NewGameWindow"
        Height="{Binding Height, Mode=TwoWay}"
        Width="{Binding Width, Mode=TwoWay}"
        Left="{Binding Left, Mode=TwoWay}"
        Top="{Binding Top, Mode=TwoWay}"
        Closing="Window_Closing">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*" />
            <ColumnDefinition Width="1*" />
            <ColumnDefinition Width="1*" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="1*" />
            <RowDefinition Height="1*" />
            <RowDefinition Height="1*" />
        </Grid.RowDefinitions>
        <Button Grid.ColumnSpan="3"
                Grid.Row="0"
                Content="Start Game"
                Margin="160,30,160,30"
                Command="{Binding StartGameCommand}"
                Foreground="Yellow"
                FontSize="25" />
        <Grid  Grid.Row="1"
               Grid.Column="0"
               Grid.ColumnSpan="3">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="1*" />
                <ColumnDefinition Width="1*" />
                <ColumnDefinition Width="2*" />
                <ColumnDefinition Width="1*" />
                <ColumnDefinition Width="1*" />
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="1*" />
                <RowDefinition Height="1*" />
            </Grid.RowDefinitions>
            <Button  Grid.Column="1"
                     Grid.Row="0"
                     Content="-"
                     Command="{Binding MinusCommand}"
                     Foreground="Yellow"
                     FontSize="25" />
            <Label Grid.Column="2"
                   Grid.Row="0"
                   Content="Number of Decks"
                   HorizontalAlignment="Center"
                   BorderBrush="Gray"
                   FontSize="25" />
            <Label Grid.Column="2"
                   Grid.Row="1"
                   Content="{Binding NumOfDecks}"
                   HorizontalContentAlignment="Center"
                   VerticalContentAlignment="Center"
                   BorderThickness="3"
                   HorizontalAlignment="Center"
                   BorderBrush="Gray"
                   FontSize="25"/>
            <Button Grid.Column="3"
                    Grid.Row="0"
                    Content="+"
                    Command="{Binding PlusCommand}"
                    Foreground="Yellow"
                    FontSize="25" />
        </Grid>
        <Button Grid.ColumnSpan="3"
                Grid.Row="3"
                Content="Back"
                Margin="160,30,160,30"
                Command="{Binding BackCommand}"
                Foreground="Yellow"
                FontSize="25" />
    </Grid>
</Window>
