<Window x:Class="CardGame21.View.NewGameWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CardGame21.View"
        mc:Ignorable="d"
        Title="NewGameWindow"
        Height="450"
        Width="800"
        Closing="Window_Closing">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*" />
            <ColumnDefinition Width="1*" />
            <ColumnDefinition Width="1*" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="1*" />
            <RowDefinition Height="1*" />
            <RowDefinition Height="1*" />
        </Grid.RowDefinitions>
        <Button Grid.ColumnSpan="3"
                Grid.Row="0"
                Content="Start Game"
                Margin="160,30,160,30"
                Command="{Binding StartGameCommand}"
                Foreground="Yellow"
                FontSize="25" />
        <Button  Grid.Column="1"
                 Grid.Row="1"
                 Content="-"
                 Command="{Binding MinusCommand}"
                 Foreground="Yellow"
                 Margin="20,70,200,20"
                 FontSize="25" />
        <Label Grid.Column="1"
               Grid.Row="1"
               Content="Number of Decks"
               HorizontalAlignment="Center"
               BorderBrush="Gray"
               Margin="1,10,1,60"
               FontSize="25" />
        <Label Grid.Column="1"
               Grid.Row="1"
               Content="{Binding NumOfDecks}"
               HorizontalContentAlignment="Center"
               VerticalContentAlignment="Center"
               BorderThickness="3"
               HorizontalAlignment="Center"
               BorderBrush="Gray"
               Margin="0,70,0,20"
               FontSize="25"
               Width="50" />
        <Button Grid.Column="1"
                Grid.Row="1"
                Content="+"
                Margin="200,70,20,20"
                Command="{Binding PlusCommand}"
                Foreground="Yellow"
                FontSize="25" />
        <Button Grid.ColumnSpan="3"
                Grid.Row="3"
                Content="Back"
                Margin="160,30,160,30"
                Command="{Binding BackCommand}"
                Foreground="Yellow"
                FontSize="25" />
    </Grid>
</Window>
